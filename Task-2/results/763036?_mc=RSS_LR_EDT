  window.onscroll = function() {
  	scrollFunction();
  }

  function scrollFunction() {
    if (document.body.scrollTop > 30 || document.documentElement.scrollTop > 30) {
      document.getElementById("top-bar").style.paddingTop = "5px";
    } else {
      document.getElementById("top-bar").style.paddingTop = "30px";
    }
	}
