<script type="text/javascript">
   var networkCode = 52681147;
   var topLevelAdUnit = "lightreading";
   var s1 = "services";
   var s2 = "";
   if ( s2 == "" ) {
   var adUnit = topLevelAdUnit + "/" + s1;
   } else {
   var adUnit = topLevelAdUnit + "/" + s1 + "/" + s2;
   }
   var slotName = "/" + networkCode + "/" + adUnit;
   var url_path = s1;
   var page = "";
   var kw = "";
   var cid = "";
   var test = "";
   var directCall = slotName;
   var topExtraAd = "&sz=240x90&t=pos%3Dtopxtra";
   var topExtraAdCalled = false;

 googletag.cmd.push(function() {
  
googletag.defineSlot(slotName,[1,1], "div-id-for-welcome-ad")
   .addService(googletag.pubads())
   .setTargeting("pos", "welcome");

  

	var mapping = googletag.sizeMapping().
	  addSize([990, 0], [[970,90],[728,90]]).
	  addSize([745, 0], [728, 90]).
	  addSize([0, 0], [320, 100]).
	  build();

	  googletag.defineSlot(slotName, [[970,90],[728,90],[320,100]], "div-id-for-top-leaderboard-ad")
	   .defineSizeMapping(mapping)
	   .addService(googletag.pubads())
	   .setTargeting("pos", "top");

   //googletag.defineOutOfPageSlot(slotName, "div-id-for-wallpaper-ad")
   //.addService(googletag.pubads())
   //.setTargeting("pos", "wallpaper");

  googletag.defineSlot(slotName, [1,2], "div-id-for-wallpaper-ad")
   .addService(googletag.pubads())
   .setTargeting("pos", "wallpaper");

  googletag.defineSlot(slotName, [[300,250], [336, 280]], "div-id-for-rec1-300x250-ad")
   .addService(googletag.pubads())
   .setTargeting("pos", "rec1");

  googletag.defineSlot(slotName, [[300,250], [336, 280]], "div-id-for-rec2-300x250-ad")
   .addService(googletag.pubads())
   .setTargeting("pos", "rec2");

  //googletag.defineSlot(slotName, [160,600], "div-id-for-skyscraper-ad")
  // .addService(googletag.pubads())
  // .setTargeting("pos", "skyscraper");

	if ( page == "landing") {
	  googletag.defineSlot(slotName, [212,212], "div-id-for-mid-1-ad")
	   .addService(googletag.pubads())
	   .setTargeting("pos", "mid_column_1");

	  googletag.defineSlot(slotName, [212,212], "div-id-for-mid-2-ad")
	   .addService(googletag.pubads())
	   .setTargeting("pos", "mid_column_2");

		googletag.pubads().addEventListener('slotRenderEnded', function(event) {
			if (event.slot.getTargeting('pos')=='mid_column_1' && !event.isEmpty) {
				$('#div-container-for-mid-1-ad').addClass('adspacer');
				$('#div-container-for-mid-1-ad').removeClass('nospacer');
				}

			if (event.slot.getTargeting('pos')=='mid_column_2' && !event.isEmpty) {
				$('#div-container-for-mid-2-ad').addClass('adspacer');
				$('#div-container-for-mid-2-ad').removeClass('nospacer');
				}

			});
	}

	

    googletag.pubads().setTargeting("s1",s1);
   if ( s2 != "" ) {
   	googletag.pubads().setTargeting("s2",s2);
   }
    googletag.pubads().setTargeting("url_path",url_path);
    googletag.pubads().setTargeting("page",page);
   if ( kw != "" ) {
   	googletag.pubads().setTargeting("kw",kw);
   	topExtraAd += "%26kw%3D" + kw;
   }
   if ( cid != "" ) {
	googletag.pubads().setTargeting("cid",cid);
   }
   if ( test != "" ) {
		googletag.pubads().setTargeting("test",test);
   }

	googletag.pubads().addEventListener('slotRenderEnded', function(event) {
		if (!topExtraAdCalled) {
			if (event.slot.getTargeting('pos')=='top' && event.isEmpty === false) {
				if (event.size[0]==728) {
					$('#div-id-for-top-leaderboard-ad').css('float','left');
					$('#leaderboardcontainer').append('<div class="second-banner"><a href="https://pubads.g.doubleclick.net/gampad/jump?iu='+directCall+topExtraAd+'"><img src="https://pubads.g.doubleclick.net/gampad/ad?iu='+directCall+topExtraAd+'"></a></div>');
					}
					topExtraAdCalled = true;
				}
			}
		});

    googletag.pubads().enableSingleRequest();
    googletag.pubads().collapseEmptyDivs();
    googletag.enableServices();
   });
</script>


