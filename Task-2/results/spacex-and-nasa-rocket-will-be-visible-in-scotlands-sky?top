					<button class="ccc-notify-button ccc-tabbable ccc-accept-button" id="accept-cmp">Accept All and Close</button> 
			</div>
			`;

			var renderEl = createElementFromHTML(html);

			renderEl.querySelector('#manage-cmp').addEventListener('click', function() {
					document.querySelector('#custom-cmp-buttons').classList.remove('min-h-screen');
					document.querySelector('#custom-cmp-buttons').classList.add('hidden');
			})

			renderEl.querySelector('#accept-cmp').addEventListener('click', function() {
					CookieControl.acceptAll();
					CookieControl.hide()
			})

			insertAfter(renderEl, el);
		}

	// set up the mutation observer
	var observer = new MutationObserver(function (mutations, me) {
			// `mutations` is an array of mutations that occurred
			// `me` is the MutationObserver instance
			var cmpButtons = document.querySelector('#ccc-button-holder');
			if (cmpButtons) {
					cmpButtons.classList.add('hidden');
					injectCMPButtons(cmpButtons);
					me.disconnect(); // stop observing
					return;
			}
	});

	// start observing on page load
	observer.observe(document, {
			childList: true,
			subtree: true
	});

	function insertAfter(newNode, referenceNode) {
			referenceNode.parentNode.insertBefore(newNode, referenceNode);
	} 

	function createElementFromHTML(htmlString) {
		var div = document.createElement('div');
		div.innerHTML = htmlString.trim();
		return div.firstChild; 
	}
</script>
