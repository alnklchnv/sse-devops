<script>
  window.googletag = window.googletag || {cmd: []};


var firstAdServed = false;

function dfp_loadSlot(containingElement, slotname,) {
 if (containingElement) { // double check element exists
  if (slotname != 'stv-ad' || containingElement.childNodes.length < 1) { // make sure an ad hasn't already been served
    var slotId = 'ad-'+ uuid();
    var slotDiv = document.createElement('div');
    var positionInArticle = containingElement.dataset.id;
    slotDiv.id = slotId;
    containingElement.appendChild(slotDiv);

    googletag.cmd.push(function () {


    var mapping2 = googletag.sizeMapping()
                            .addSize([0, 0], ['fluid', [300, 250], [300, 100]])
                            .addSize([501, 0], ['fluid', [300, 250], [468, 60]])
                            .addSize([1001, 0], ['fluid', [300, 250]])
                            .addSize([1361, 0], ['fluid', [300, 250], [728, 90]])
                            .build();

      var slot = googletag.defineSlot('/1055753/stv.tv/article-inline-' + positionInArticle, [[300,250],[1,1], 'fluid'], slotId)
      .defineSizeMapping(mapping2)
              .addService(googletag.pubads());

      console.log("Pushed AD: " + slotId + " to the DOM.")
     googletag.display(slotId);
    //  googletag.pubads().refresh([slot]);
    });

  }
 }
}

// This function recieves a slide_index and inserts ads accordingly
function loadAdsInSlide(slide_index) { 
 var allSlots = document.querySelectorAll('article[data-index="' + slide_index + '"] .stv-ad');

 allSlots.forEach(function (el) {
    dfp_loadSlot(el, 'stv-ad');
 })
}

