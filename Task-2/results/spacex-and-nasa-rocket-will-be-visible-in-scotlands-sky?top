<script>
function uuid() {
  return ([1e7] + -1e3 + -4e3 + -8e3 + -1e11).replace(/[018]/g, function (c) {
    return (c ^ crypto.getRandomValues(new Uint8Array(1))[0] & 15 >> c / 4).toString(16);
  });
}

// This function receives adData (from GDN directly) and sticks wallpaper ad into the DOM
function serveWallpaperAd(adData){
    document.querySelector('.outer-container').classList.add('wallpaper');
    document.querySelector('.wallpaper-background').classList.add('visible');
    document.querySelector('.wallpaper-background').style.backgroundImage = "url("+adData.backgroundImage+")";
    document.querySelector('.wallpaper-background').href = adData.clickthroughUrl;
    document.querySelector('.wallpaper-background').setAttribute("alt",adData.altText);
}

function getCookie(cname) {
  var name = cname + "=";
  var decodedCookie = decodeURIComponent(document.cookie);
  var ca = decodedCookie.split(';');
  for (var i = 0; i < ca.length; i++) {
    var c = ca[i];
    while (c.charAt(0) == ' ') {
      c = c.substring(1);
    }
    if (c.indexOf(name) == 0) {
      return c.substring(name.length, c.length);
    }
  }
  return false;
}

function checkForCookie(cname) {
    var name = cname + "=";
    var decodedCookie = decodeURIComponent(document.cookie);
    var ca = decodedCookie.split(';');
    for (var i = 0; i < ca.length; i++) {
        var c = ca[i];
        while (c.charAt(0) == ' ') {
        c = c.substring(1);
        }
        if (c.indexOf(name) == 0) {
        return true;
        }
    }
    return false;
}
</script>


