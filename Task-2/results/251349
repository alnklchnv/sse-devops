            $(function () {
                $('div.tabs-container ul.tabs li').click(function () {
                    var curTabIndex = $(this).index() + 1;
                    $('div.tabs-container ul.tabs li div.tab, div.tabs-content-wrap ul.tabs-content li').removeClass('selected');
                    $('div.tabs-container ul.tabs li:nth-child(' + curTabIndex + ') div.tab, div.tabs-content-wrap ul.tabs-content li:nth-child(' + curTabIndex + ')').addClass('selected');
                });
            });
