                    <script>// <![CDATA[

                var popularTop = 0;
                var jQueryAds = null;
                var winInterval = [];

                var targetSlots = ['Article-Unit1', 'Article-Unit2', 'Article-Unit3', 'Article-Unit4', 'Article-Unit5', 'Article-Unit6', 'Article-Unit7', 'Article-Unit8', 'Article-Unit9', 'Article-Unit10'] //array - Slots to check


                function testHeight() {
                    var tmpTop = $(".popular").position().top;
                    if (tmpTop != popularTop) {
                        popularTop = tmpTop;

                    } else {
                        makeAdsMoveInterval(jQueryAds);
                    }
                }


                function makeAdsMove($) {
                    jQueryAds = $;
                    var winIntervalVal = setInterval(testHeight, 100);
                    winInterval.push(winIntervalVal);

                    if (googletag) {
                        googletag.cmd.push(function () {
                            googletag.pubads().addEventListener('slotRenderEnded', function (e) {
                                var slot = e.slot.getSlotElementId()
                                targetSlots.forEach(function (targetSlot) {
                                    document.getElementById(slot).style.backgroundColor = "rgb(16 16 16 / 0%)";
                                })
                            });
                        });
                    }
                }

                function makeAdsMoveInterval($) {
                    return;
                    var intervalToKill = winInterval.pop();
                    clearInterval(intervalToKill);

                    popularTop = $(".popular").position().top; //remove 1675

                    $(window).on("resize", function () {
                        if ($(".content").width() > 829 && $(".content").width() <= 970) {
                            $(".text-content").width($(".content").width() - 310);
                            $("#ad_0").css("margin-top", "-" + ($(".container").height()) + "px");
                        }
                    });

                    if ($(".content").width() > 829 && $(".content").width() <= 970) {
                        $(".text-content").width($(".content").width() - 310);
                    }

                    if ($("#im-mobile").css("display") == "none") {

                        var totalAds = $(".sticky_column23").length;
                        var extraWithNativebox = 0;

                        if ($(".nativebox-content").length > 0) {
                            extraWithNativebox = 10;
                        }

                        var eachHeight = ($('.text-content').height() + 1700) / (totalAds); //600

                        $(".sticky_parent").css("min-height", eachHeight + "px");
                        $(".sticky_parent").css("height", eachHeight + "px");

                        if ($(".block-bottom").length) {
                            var content = $("<div></div>").attr("id", "ad_10").css("height", eachHeight + "px").css("min-height", eachHeight + "px").css("margin-bottom", "10px").addClass("sticky_parent");
                            var $currentContent = $(".block-bottom").clone();
                            $(".block-bottom").addClass("sticky_column23 special-bottom-ad").removeClass("block-bottom").detach().html($currentContent.innerHTML).appendTo(content);
                            $(content).appendTo($(".ads-content"));
                        }


                        $("#ad_0").css("margin-top", "-" + (($(".container").height() - $(".nativebox-content").outerHeight() - extraWithNativebox)) + "px");


                        if ($("#ad_10").length) {
                            changeLastAdHeight();
                        } else {
                            var lastStickyParent = null;
                            $.each($(".sticky_parent"), function (key, value) {
                                lastStickyParent = value;
                            });
                            if (lastStickyParent) {
                                $(lastStickyParent).addClass("last_sticky_parent");
                                setTimeout(function () {
                                    var revHeight = 0;
                                    if (!$("#rcjsload_950a9d").length && $(".text-content").height() > 1000) {
                                        revHeight = 550;
                                    }
                                    var newHeight = ((popularTop - $("#adStopper").height()) - ($(".last_sticky_parent").position().top) - 550 - revHeight);
                                    $(".last_sticky_parent").css("min-height", newHeight);
                                    $(".last_sticky_parent").css("height", newHeight);
                                }, 500);

                            }
                        }
                    }

                }

                function changeLastAdHeight() {
                    if (popularTop != $(".popular").position().top) {
                        popularTop = $(".popular").position().top;
                        setTimeout(function () {
                            changeLastAdHeight()
                        }, 1000);
                    } else {
                        $("#ad_10").height(($(".popular").position().top - $(".popular").height()) - ($("#ad_10").position().top));
                    }
                }
            </script>
