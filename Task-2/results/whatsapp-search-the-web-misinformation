    document.addEventListener("PelcroSiteLoaded", function (e) {
        var target = document.querySelector('.pelcro-login-button');

        var observer = new MutationObserver(function(mutations) {
            mutations.forEach(function(mutation) {
                if (mutation.type == 'childList' && mutation.addedNodes.length) {
                    if(mutation.addedNodes[0].data == 'My account') {
                        setPelcroUserButtons();
                        unhidePelcroLoginButtons();
                    }
                }
            });
        });
        var config = { attributes: true, childList: true, characterData: true };
        observer.observe(target, config);

        if (!Pelcro.user.isAuthenticated()) {
            unhidePelcroLoginButtons();
            toggleSubscribeButtonVisibility(true);
        }
    });

    document.addEventListener("PelcroUserLogin", function (e) {
        toggleSubscribeButtonVisibility(false);
        setPelcroUserButtons();
    });

    document.addEventListener("PelcroUserLoaded", function (e) {
        toggleSubscribeButtonVisibility(false);
    });
    document.addEventListener("PelcroUserLogout", function (e) {
        toggleSubscribeButtonVisibility(true);
        clearPelcroUserButtons();
    });
    document.addEventListener("PelcroPaywallTriggered", function (e) {
        careerArticles = document.querySelectorAll('article.careers .content-wrapper');
        if (careerArticles.length == 0) {
            return;
        }
        careerArticles.forEach(elem => {
            elem.parentNode.querySelector('.social-wrapper').style.height = elem.offsetHeight+"px";
        });
        kill_autoload = true;
        jQuery('article:last').find('.recommendation-box').hide();
        jQuery('footer').removeClass('hide');
    });

    function unhidePelcroLoginButtons() {
        document.querySelectorAll('.community-button.pelcro-login-button').forEach((item) => {
            item.classList.remove('hide');
        });
    }
    function toggleSubscribeButtonVisibility(show = true) {
        let pelcroBtns = document.querySelectorAll('.prompt.pelcro-subscribe-button');
        for (i = 0; i < pelcroBtns.length; ++i) {
            if (show) {
                pelcroBtns[i].classList.remove('hide');
            } else {
                pelcroBtns[i].classList.add('hide');
            }
        }
    }
    function setPelcroUserButtons() {
        let user = Pelcro.user.read();
        let pelcroMessage = 'My Account';

        if (user.first_name) {
            pelcroMessage = 'Hi, '+user.first_name;
        }
        let content = '<span class="login-name">'+pelcroMessage+'</span><span class="red">></span>';
        let pelcroBtns = document.querySelectorAll('.community-button.pelcro-login-button');
        for (i = 0; i < pelcroBtns.length; ++i) {
            pelcroBtns[i].classList.add('logged-in');
            pelcroBtns[i].classList.add('circular-std');
            pelcroBtns[i].innerHTML = content;
        }
    }

    function clearPelcroUserButtons() {
        let pelcroBtns = document.querySelectorAll('.community-button.pelcro-login-button');
        for (i = 0; i < pelcroBtns.length; ++i) {
            pelcroBtns[i].classList.remove('logged-in');
            pelcroBtns[i].classList.remove('circular-std');
            pelcroBtns[i].innerHTML = 'Login';
        }
    }
</script>
</head>

<body class="business supertag whatsapp-search-the-web-misinformation" data-single="1">
<script class="at-tags">
    window.AT = {
        enabledDispatch: false,
        hasQueuedDispatch: false,
        hasQueuedEvent: false,
        queuedEvent: null,
        tag: null,
        page: {},
        props: {},
        search: {},
        addProp: function(key, value) {
            this.props[key] = value;
        },
        addEntity: function(key, value) {
            this.page[key] = value;
        },
        dispatch: function() {
            this.page = this.cleanObject(this.page);
            this.props = this.cleanObject(this.props);
            if (!this.enabledDispatch) {
                this.hasQueuedDispatch = true;
                return;
            }

            this.tag.page.set(this.page);
            this.tag.setProps(this.props, false);
            this.tag.dispatch();
        },
        enableDispatch: function () {
            // Load script
            this.loadScript('https://tag.aticdn.net/617334/smarttag.js')
                .then(() => {
                    this.tag = new ATInternet.Tracker.Tag(),
                    this.enabledDispatch = true;
                    this.tag.page.set(this.page);
                    this.tag.setProps(this.props, false);

                    if (this.hasQueuedDispatch) {
                        this.tag.dispatch();
                    }

                    if (this.hasQueuedEvent) {
                        this.tag.event.send(this.queuedEvent.name, this.queuedEvent.props);
                    }
                })
                .catch(() => {
                    console.error('Failed script load');
                });
        },
        loadScript(scriptUrl) {
            const script = document.createElement('script');
            script.src = scriptUrl;
            document.body.appendChild(script);

            return new Promise((res, rej) => {
                script.onload = function() {
                res();
                }
                script.onerror = function () {
                rej();
                }
            });
        },
        sendEvent: function(event_name, additional_props) {
            var eventProps = {
                page: this.page.name,
                page_chapter1: this.page.chapter1,
                page_chapter2: this.page.chapter2
            };
            Object.assign(eventProps, this.props);
            if (additional_props) {
                Object.assign(eventProps, additional_props);
            }
            eventProps = this.cleanObject(eventProps);
            if (!this.enabledDispatch) {
                this.hasQueuedEvent = true;
                this.queuedEvent = {name: event_name, props: eventProps};
                return;
            }
            this.tag.event.send(event_name, eventProps);
        },
        setSearch: function(term, page) {
            this.search.keyword = term;
            this.tag.internalSearch.set({
                keyword: term,
                resultPageNumber: page
            });
        },
        searchClick: function(elem, page, position) {
            this.tag.internalSearch.send({
                elem: elem,
                keyword: this.search.keyword,
                resultPageNumber: page,
                resultPosition: position
            });
        },
        cleanItem: function(str) {
            if (typeof str === "undefined") {
                return '';
            }

            if (typeof str === "object") {
                var self = this;
                Object.keys(str).forEach(function(key) {
                    str[key] = self.cleanItem(str[key]);
                });
                // Need to send back as a stringified form, as AT won't parse array.
                return '["' + str.join('","') + '"]';
            }

            if (str.match(/^\["(.*)"\]$/)) {
                // Don't double-encode tags, return as-is.
                return str;
            }

            if (typeof str !== "string") {
                return str;
            }
            // AT have a very limited set of accepted chars - ensure we comply.
            // Anglicise chars first (https://stackoverflow.com/a/37511463/2287)
            return str.normalize("NFD")
                .replace(/[\u0300-\u036f]/g, "")
                .replace(/[^\w\s~\.\\\/]/gi, '')
                .replace(/\s+/g, '_');
        },
        cleanObject: function(obj) {
            var self = this;
            Object.keys(obj).forEach(function(key) {
                obj[key] = self.cleanItem(obj[key]);
            });
            return obj;
        }
    };

            window.AT.props = {
            'employer': 'No-Employer',
            'a:s:tags_article': ["media","messaging","search","WhatsApp"],
            'author_article': 'Elaine Burke',
            'date_article' : '04/08/2020',
            'hour_publication_article': '16',
        };
            window.AT.page = {
        name: document.title
    };

            window.AT.addEntity('chapter1', 'Technology');
                window.AT.addEntity('chapter2', 'Business');
        </script>
<script>
    window.AT.dispatch();
</script>
