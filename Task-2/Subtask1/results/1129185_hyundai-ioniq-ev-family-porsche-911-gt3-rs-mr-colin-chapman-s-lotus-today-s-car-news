                            googletag.defineSlot('/2922/motorauthority.tmus/newsarticle/300x250_d-side-rail-top', [[300, 250]], 'right-rail-refreshable')
                                            .setTargeting('kw', ["d-side-rail-top"])
                .setTargeting('tile', [3])
                .setTargeting('sz', ["300x250"])


                                        .setTargeting('tags', ["news,today-in-car-news"])
                                                .setTargeting('page', ["blog-post-article"])
            .setTargeting('variation', window.hgm_variation || '')
            .setCollapseEmptyDiv(true)
            .addService(googletag.pubads()));
                    hgmads.setLastOrder(4);
            gptadslots.push(
                            googletag.defineSlot('/2922/motorauthority.tmus/newsarticle/300x250_d-side-rail-center', [[300, 250]], 'ad-a-2')
                                            .setTargeting('kw', ["d-side-rail-center"])
                .setTargeting('tile', [4])
                .setTargeting('sz', ["300x250"])


                                        .setTargeting('tags', ["news,today-in-car-news"])
                                                .setTargeting('page', ["blog-post-article"])
            .setTargeting('variation', window.hgm_variation || '')
            .setCollapseEmptyDiv(true)
            .addService(googletag.pubads()));
        
        googletag.pubads().enableAsyncRendering();
        googletag.pubads().collapseEmptyDivs();
        googletag.pubads().disableInitialLoad();
        googletag.pubads().enableSingleRequest();
        if (window.Krux) {
            googletag.pubads().setTargeting('ksg', window.Krux.segments);
            googletag.pubads().setTargeting('kuid', window.Krux.user);
        }

                if (googletag.pubads().getTargeting('permutive').length == 0) {
            var kvs = window.localStorage.getItem('_pdfps');
            googletag.pubads().setTargeting('permutive', kvs ? JSON.parse(kvs) : []);
        }
    
        googletag.enableServices();

        hgmads.registerEventListeners();

//        hgm.debug('gpt - ready');
    }); // cmd push

</script>
