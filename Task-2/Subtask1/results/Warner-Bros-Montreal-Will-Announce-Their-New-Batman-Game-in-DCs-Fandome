<script type="text/javascript">
    // prevents multiple ajax call
    var stop = false;

    var hasSeenAniview = false
    var isAniviewOnScreen = false

    function element_in_scroll(elem)
    {
        var docViewTop = $(window).scrollTop();
        var docViewBottom = docViewTop + $(window).height();

        var elemTop = elem instanceof jQuery ? elem.offset().top : $(elem).offset().top;
        var elemBottom = elem instanceof jQuery ? elemTop + elem.height() : elemTop + $(elem).height();

        //return ((elemBottom <= docViewBottom) && (elemTop >= docViewTop) && stop == false);
        return ((elemBottom <= docViewBottom) && stop == false);
    }
    var currentPriority = 0;

    // SET THIS TO ZERO TO LOAD FROM THE PROMOTED CATEGORY
    var loadedThisTime = 1;

    $.fn.isInViewport = function () {
        let elementTop = $(this).offset().top;
        let elementBottom = elementTop + $(this).outerHeight();

        let viewportTop = $(window).scrollTop();
        let viewportBottom = viewportTop + $(window).height();

        return elementBottom > viewportTop && elementTop < viewportBottom;
    };

    var debounce;
    $(document).scroll(function () {
        clearTimeout(debounce);

        debounce = setTimeout(function() {
            var maxPriority = 0;
            var maxSlug = '';
            var maxAuthor = '';
            var maxTitle = '';


            if ($("#aniview-wrapper").isInViewport()) {
                console.log("aniview-wrapper is in scroll")

                if (!hasSeenAniview) {
                    // prevent layout shift
                    $("#aniview-wrapper").css({
                        'min-height': $("#aniview-wrapper").height(),
                        'margin-bottom': $("#aniview-wrapper").find('.aniview').css('margin-bottom')
                    })
                }
                hasSeenAniview = true
                isAniviewOnScreen = true
            }
            else
            {
                console.log("aniview-wrapper is not in scroll")
                isAniviewOnScreen = false
            }

            console.log("aniview-wrapper hasSeenAniview", hasSeenAniview, "isAniviewOnScreen", isAniviewOnScreen)

            if (hasSeenAniview)
            {
                if (isAniviewOnScreen) {
                    // remove any floating class
                    console.log("aniview-wrapper removing floating class");

                    $("#aniview-wrapper .aniview").removeClass('aniview-float');
                }
                else {
                    // add any floating class
                    console.log("aniview-wrapper adding floating class");
                    $("#aniview-wrapper .aniview").addClass('aniview-float');
                }
            }

            if (element_in_scroll("#loadmoredatatrigger")) {
                let categoryToLoad = '29';
                if (loadedThisTime === 0) {
                    categoryToLoad = '50'; // hard coded to promoted category
                }
                fun_loadmoreNewsDetailData(categoryToLoad,'40783');
                loadedThisTime++;
            }

            $(".pageviewtrigger").each(function(index) {
                if ($(this).isInViewport()) {
                    var priority = $(this).data('priority');
                    var slug = $(this).data('slug');
                    var author = $(this).data('author');
                    var title = $(this).data('title');

                    if (priority > maxPriority || (priority === maxPriority && maxSlug.length === 0))
                    {
                        maxPriority = priority;
                        maxSlug = slug;
                        maxAuthor = author;
                        maxTitle = title;
                    }

                }
            });

            // are we doing a pageview
            if (maxPriority != currentPriority) {
                // yep
                console.log("PAGEVIEW SETTING URL");
                var authorSlug = maxAuthor.replace(' ','');
                var thisUrl = 'news/' + (!maxSlug.includes(authorSlug) ? authorSlug + '/' : '' ) + maxSlug;
                history.pushState({}, maxTitle, '/' + thisUrl);
                console.log("PAGEVIEW SET URL", thisUrl);
                console.log("PAGEVIEW SETTING DOCUMENT TITLE")
                var title = document.querySelectorAll('title')[0];
                title.innerHTML = maxTitle;
                console.log("PAGEVIEW SET DOCUMENT TITLE", title);
                currentPriority = maxPriority;

                // send the GA
                setTimeout(function() {

                    let location = 'https://epicstream.com/' + thisUrl;
                   // ga('set', 'location', location)
                    let page = '/' + thisUrl;
                    ga('set', 'page', page);
                    ga('set', 'title', maxTitle);
                    ga('set', 'transport', 'xhr');

                    console.log("SENDING PAGEVIEW ON TIMEOUT", ga);
                    try {
                        ga('send', 'pageview');
                    } catch (err) {
                        console.log("SENDING PAGEVIEW SAW ERROR ON SEND", err);
                    }
                    console.log("SENT PAGEVIEW ON TIMEOUT ", page);
