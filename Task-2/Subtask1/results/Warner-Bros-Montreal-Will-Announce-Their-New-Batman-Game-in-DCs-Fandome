                // funtion to load more data in Home.
                var callcount = 1;
                function fun_loadmoreData(controller,author_id='')
                {
                    stop = true;
                    $('.load-more i').css('display', '');
                    $.ajax({
                        url: 'https://epicstream.com/' + controller + '/loadmore',
                        data: 'pageno=' + callcount+'&author_id=' + author_id,
                        type: 'POST',
                        success: function (data)
                        {
                            if (data == '0')
                            {
                                $('#showloadmore').css('display', 'none');
                            } else
                            {
                                $("#loadmoredata").append(data);
                                $('.load-more i').css('display', 'none');
                            }
                            stop = false;
                        }

                    });
                    callcount++;
                }

                function fun_loadmoreNewsDetailData(category_id='', news_id='')
                {
                    stop = true;
                    $('.load-more i').css('display', '');
                    $.ajax({
                        url: 'https://epicstream.com/' + 'frontnews/loadmoredetail',
                        data: 'pageno=' + (callcount-1) +'&category_id=' + category_id + '&news_id=' + news_id,
                        type: 'POST',
                        success: function (data)
                        {
                            if (data == '0')
                            {
                                $('#showloadmore').css('display', 'none');
                            } else
                            {
                                $("#loadmoredata").append(data);
                                $('.load-more i').css('display', 'none');
                            }
                            stop = false;
                        }

                    });
                    callcount++;
                }

