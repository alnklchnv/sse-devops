function runParsely() {
  if (window.parselyDone) return;

  (function(d) {
    var b = d.body;
    var e = d.createElement('script');
    e.id = 'parsely-cfg';
    e.src = '//cdn.parsely.com/keys/gamesindustry.biz/p.js';
    b.appendChild(e);
  })(document);

  window.parselyDone = true;
}

